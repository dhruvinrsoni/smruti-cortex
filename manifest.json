{
  "manifest_version": 3,
  "name": "SmrutiCortex: Instant Browser History Search",
  "short_name": "SmrutiCortex",
  "description": "SmrutiCortex is your intelligent browser history search assistant. Quickly find any URL, bookmark, or browsing session with ultra-fast search capabilities.",
  "version": "8.0.0",
  "permissions": [
    "history",
    "bookmarks",
    "storage",
    "tabs",
    "alarms"
  ],
  "optional_host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "SmrutiCortex: Search Your Browser History",
    "default_popup_width": 800,
    "default_popup_height": 500
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "smruticortex@dhruvinrsoni.com",
      "strict_min_version": "109.0"
    },
    "gecko_android": {
      "strict_min_version": "113.0"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content_scripts/quick-search.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "omnibox": {
    "keyword": "sc"
  },
  "commands": {
    "open-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Open SmrutiCortex search popup"
    }
  },
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content_scripts/*.js",
        "assets/*",
        "popup/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
