{
  "manifest_version": 3,
  "name": "SmrutiCortex",
  "short_name": "SmrutiCortex",
  "description": "Everything-like instant search for your browser history â€” SmrutiCortex indexes your browsing memory and retrieves any URL instantly.",
  "version": "0.1.0",
  "permissions": [
    "history",
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "alarms",
    "commands"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.your-ai-provider.example/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "SmrutiCortex",
    "default_popup_width": 800,
    "default_popup_height": 500
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/extractor.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "omnibox": { "keyword": "sc" },
  "commands": {
    "open-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Open SmrutiCortex search popup"
    }
  },
  "icons": {
    "16": "assets/icon16.svg",
    "48": "assets/icon48.svg"
  },
  "web_accessible_resources": [
    {
      "resources": ["content_scripts/*.js", "assets/*", "popup/*"],
      "matches": ["<all_urls>"]
    }
  ]
}