{
  "manifest_version": 3,
  "name": "SmrutiCortex",
  "short_name": "SmrutiCortex",
  "description": "Everything-like instant search for your browser history â€” SmrutiCortex indexes your browsing memory and retrieves any URL instantly.",
  "version": "5.0.0",
  "permissions": [
    "history",
    "bookmarks",
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "alarms",
    "commands"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:*/*",
    "http://127.0.0.1:*/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "SmrutiCortex",
    "default_popup_width": 800,
    "default_popup_height": 500
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_scripts/extractor.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_scripts/quick-search.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "omnibox": {
    "keyword": "sc"
  },
  "commands": {
    "open-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Open SmrutiCortex search popup"
    }
  },
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content_scripts/*.js",
        "assets/*",
        "popup/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
