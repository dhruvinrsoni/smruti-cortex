{
  "name": "smruti-cortex",
  "version": "7.0.0",
  "private": true,
  "description": "SmrutiCortex â€” Everything-like instant browser history search (MV3).",
  "homepage": "https://dhruvinrsoni.github.io/smruti-cortex/",
  "chromeStoreUrl": "https://chromewebstore.google.com/detail/ecnkiihcifbfnhjblicfbppplobiicoi",
  "repository": {
    "type": "git",
    "url": "https://github.com/dhruvinrsoni/smruti-cortex.git"
  },
  "author": "dhruvinrsoni",
  "bugs": {
    "url": "https://github.com/dhruvinrsoni/smruti-cortex/issues"
  },
  "keywords": ["chrome-extension","mv3","history","search","privacy","smruti-cortex"],
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "sync-version": "node ./scripts/sync-version.mjs",
    "build": "npm run sync-version && npm run clean && npm run tsc && node ./scripts/copy-static.mjs && node ./scripts/esbuild-dev.mjs",
    "build:prod": "npm run sync-version && npm run clean && npm run tsc && node ./scripts/copy-static.mjs && node ./scripts/esbuild-prod.mjs",
    "package": "npm run build:prod && node ./scripts/package.mjs",
    "generate-screenshots-index": "node ./scripts/generate-screenshots-index.mjs",
    "build:site": "node ./scripts/generate-screenshots-index.mjs && node ./scripts/build-site.mjs",
    "tsc": "tsc --project tsconfig.json",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 1000",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "lint:release": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 52",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "start:watch": "node ./scripts/esbuild-dev.mjs --watch",
    "docker-build-image": "node -p \"require('./package.json').version\" | node -e \"const v=require('fs').readFileSync(0,'utf8').trim(); require('child_process').execSync('docker build -t smruti-cortex:' + v + ' .',{stdio:'inherit'});\"",
    "docker-compose-build": "sh ./scripts/docker-build-and-extract.sh",
    "docker-compose-dev": "node ./scripts/docker-compose.mjs run --rm dev",
    "docker-compose-test": "node ./scripts/docker-compose.mjs run --rm test",
    "docker-compose-lint": "node ./scripts/docker-compose.mjs run --rm lint",
    "docker-validate": "sh ./scripts/validate-docker.sh",
    "docker-clean": "sh ./scripts/docker-clean.sh"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.188",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^4.0.16",
    "archiver": "^7.0.1",
    "esbuild": "^0.27.0",
    "eslint": "^8.57.0",
    "jsdom": "^24.1.0",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.6.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "webextension-polyfill": "^0.10.0"
  }
}
